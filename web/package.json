{
  "name": "toogl-to-jira-sync",
  "version": "1.0.0",
  "main": "src/electron.js",
  "license": "MIT",
  "scripts": {
    "react-start": "parcel index.html --out-dir build",
    "react-build": "parcel build index.html --out-dir build --public-url ./",
    "electron-build": "electron-builder -mwl",
    "clean-build": "rm -rf build/ .cache dist/",
    "build": "yarn clean-build && yarn react-build && yarn electron-build",
    "start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:1234 && electron . \""
  },
  "build": {
    "appId": "com.boskysoft",
    "files": [
      "src/electron.js",
      "src/assets/*",
      "build/**/*"
    ],
    "mac": {
      "target": "dmg",
      "icon": "src/assets/logo.png"
    },
    "win": {
      "target": "nsis",
      "icon": "src/assets/logo.png"
    },
    "linux": {
      "target": "deb",
      "icon": "src/assets/logo.png",
      "category": "Development"
    }
  },
  "homepage": "./",
  "dependencies": {
    "@emotion/core": "^10.0.35",
    "@emotion/styled": "^10.0.27",
    "antd": "^4.7.3",
    "dayjs": "1.8.35",
    "electron": "^10.1.4",
    "electron-is-dev": "^1.2.0",
    "electron-json-storage": "^4.3.0",
    "node-fetch": "^2.6.1",
    "querystring": "^0.2.0",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "swr": "^0.3.6"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "babel-plugin-jsx-pragmatic": "^1.0.2",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "electron-builder": "^22.9.1",
    "eslint": "7.2.0",
    "eslint-config-airbnb": "18.2.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jsx-a11y": "^6.3.0",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-less-js-enabled": "^1.0.2",
    "prettier": "^2.1.2",
    "wait-on": "^5.2.0"
  }
}
